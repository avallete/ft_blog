{% extends 'base.html.twig' %}
{% block title %}Edit{% endblock %}
{% block content %}
    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% endif %}
    <form action="{{ path('article_edit', {'id': article.id}) }}" method="post">
        <fieldset>
            <legend><i class="fa fa-lock" aria-hidden="true"></i> New Article</legend>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="_title" value="{{ article.title }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="_description" rows="30">{{ article.description }}</textarea>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <button type="submit" type="button" class="btn btn-success">Save</button>
        </fieldset>
    </form>
{% endblock %}